{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "paths": {
            "@domain/*": ["domain/*"],
            "@infra/*": ["infra/*"],
            "@main/*": ["main/*"],
            "@presentation/*": ["presentation/*"],
            "@shared/*": ["shared/*"]
        }
    },
    "include": ["src/**/*"]
}
